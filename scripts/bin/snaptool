set -e

MYNAME=$(basename $BASH_SOURCE .sh)

# load libsnaptool
. $(dirname $BASH_SOURCE)/libsnaptool.sh

# ------------------------- options parsing -------------------------------------

function __getbuiltincommands() {
	# enumerate all:
	# - functions named command_xxxx
	# - scripts named snaptool-xxxx
	local builtins=$(typeset -F | awk '{print $3;}' | grep ^command_ | sort)

	echo $builtins
}
function __getfilecommands() {
	local external=$(find $(dirname $BASH_SOURCE) -name "${MYNAME}-*" | xargs basename | sort)
	echo $external
}

function __callcommand() {
	cmd=$1
	shift
	local funcname=command_$cmd
	if [[ $(type -t $funcname) == "function" ]]; then
		COMMAND=$(basename $BASH_SOURCE .sh)-$cmd
		$funcname "$@"
		return $?
	fi

	# find file
	local extname=$(dirname $BASH_SOURCE)/${MYNAME}-$cmd
	if [[ -f $extname ]]; then
		$extname "$@"
		return $?
	fi

	error "Command $cmd not found"
	return 1
}

function __global_usage() {
	cat <<EOF >&2
General usage: $(basename $BASH_SOURCE) <command> [options]

Available commands:
EOF
	# help for other commands
	for x in $(__getbuiltincommands); do
		echo "   ${x#command_} (builtin)" >&2
	done
	for x in $(__getfilecommands); do
		echo "   ${x#$MYNAME-} (external)" >&2
	done
	echo >&2

	exit 0
}

# parse command and run it
[[ $# == 0 ]] && { __global_usage; exit 1; }

#special case for help command
cmd=$1
shift
[[ "$cmd" =~ ^(-h|--help|help)$ ]] && {
	__global_usage
	exit 1
}

__callcommand $cmd "$@"

