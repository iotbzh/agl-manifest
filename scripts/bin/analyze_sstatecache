#!/bin/bash

SCRIPT=$(basename $BASH_SOURCE)

. /etc/xdtrc

SRCDIR=${1:-$XDT_DIR}


function usage() {
	cat <<EOF >&2
Usage: ${SCRIPT} [options]

EOF
	exit 1
}

cd ${SRCDIR}/sstate-cache

for x in $(find . -type f  | cut -f8 -d':' | cut -f2- -d_ | sort | uniq ); do
	du -ks $(find . -name "*$x") | awk '{ i=i+$1; } END { printf("%d",i); }'
	echo " $x"
done | sort -n

